@model Party
@using PartyInvites.Enums

<form asp-controller="Party" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="PartyName">Parti Başlığı</label>
        <input type="text" class="form-control" asp-for="PartyName">
    </div>
    <div class="form-group">
        <label asp-for="PartyDate">Parti Tarihi</label>
        <input type="datetime" class="form-control" asp-for="PartyDate">
    </div>
    <div class="form-group">
        <label asp-for="PartyType">Açıklama</label>
        <select asp-for="PartyType" class="form-control">
            <option>@PartyType.Birthday</option>
            <option>@PartyType.Pool</option>
            <option>@PartyType.Cocktail</option>
            <option>@PartyType.After</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TicketPrice">Açıklama</label>
        <input type="number" class="form-control" asp-for="TicketPrice">
    </div>
    <button type="submit" class="btn btn-primary align-items-center">Oluştur</button>
</form>