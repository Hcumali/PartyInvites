@model List<Category>

@{
    ViewData["Title"] = "Anasayfa";
}

@section Header{
    <header class="bg-primary bg-gradient text-white">
        <div class="container px-4 text-center">
            <h1 class="fw-bolder">PARTY</h1>
            <p class="lead">Bütün arkadaşların bu partide!</p>
            <a class="btn btn-lg btn-light" asp-controller="User" asp-action="Create">Partiye Katılmak İçin Tıkla</a>
        </div>
    </header>
}

<h3 class="text-center">DUYURULAR</h3>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary float-right">Yeni Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model[i].CategoryName</td>
                <td>@Model[i].Description</td>
                <td>
                    <a class="big-icon" asp-controller="Category" asp-action="Update" asp-route-id="@Model[i].Id">Güncelle</a>
                    <a class="big-icon" asp-controller="Category" asp-action="Delete" asp-route-id="@Model[i].Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


