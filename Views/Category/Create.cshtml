@model Category

<style>
    .form-group {
        margin-top: 6px;
        margin-bottom: 6px;
    }

    h1 {
        text-align: center;
        margin: 20px;
    }
</style>

<form asp-controller="Category" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <h1>Duyuru Oluştur</h1>
    <div class="form-group">
        <label asp-for="CategoryName">Kategori Adı</label>
        <input type="text" class="form-control" asp-for="CategoryName">
    </div>
    <div class="form-group">
        <label asp-for="Description">Açıklama</label>
        <input type="text" class="form-control" asp-for="Description" placeholder="Açıklamanıyı yazınız">
    </div>
    <div class="row justify-content-center">
        <button type="submit" class="btn btn-primary align-baseline" style="width:8rem; margin: 15px">Oluştur</button>
    </div>
</form>